<div
  ...attributes
>
  {{#if this.displayPaginator}}
    <nav aria-label="Page navigation" data-test-selector="page-navigation">
      <ul class="pagination">
  
        <li class={{if this.isPrevDisabled "disabled"}} data-test-selector="previous-page">
          {{#if this.isPrevDisabled}}
            <span><span aria-hidden="true">&laquo;</span></span>
          {{else}}
            <a href="#"
              aria-label="Previous"
              data-test-selector="previous-page-link"
              {{on "click" (fn this.getPage this.prevPageNumber)}}
            >
              <span aria-hidden="true">&laquo;</span>
            </a>
          {{/if}}
        </li>
  
        {{#each this.pages as |page|}}
          <li class="page-number{{if page.active " active"}}" data-test-selector="page-number">
            {{#if page.active}}
              <span>{{page.number}} <span class="sr-only">(current)</span></span>
            {{else}}
              <a
                href="#"
                data-test-selector="page-number-link"
                {{on "click" (fn this.getPage page.number)}}
              >
                {{page.number}}
              </a>
            {{/if}}
          </li>
        {{/each}}
  
        <li class={{if this.isNextDisabled "disabled"}} data-test-selector="next-page">
          {{#if this.isNextDisabled}}
            <span><span aria-hidden="true">&raquo;</span></span>
          {{else}}
            <a href="#"
              aria-label="Next"
              data-test-selector="next-page-link"
              {{on "click" (fn this.getPage this.nextPageNumber)}}
            >
              <span aria-hidden="true">&raquo;</span>
            </a>
          {{/if}}
        </li>
      </ul>
    </nav>
  {{/if}}
</div>